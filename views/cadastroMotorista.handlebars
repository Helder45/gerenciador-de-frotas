<main>
    {{#each erros}}
    <div class="alert bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative" role="alert">
        <span class="block sm:inline">Os campos devem ser preenchidos</span>
        <span class="absolute top-0 bottom-0 right-0 px-4 py-3">
            <svg class="fill-current h-6 w-6 text-red-500" role="button" xmlns="http://www.w3.org/2000/svg"
                viewBox="0 0 20 20">
                <title>Fechar</title>
                <path
                    d="M14.348 14.849a1.2 1.2 0 0 1-1.697 0L10 11.819l-2.651 3.029a1.2 1.2 0 1 1-1.697-1.697l2.758-3.15-2.759-3.152a1.2 1.2 0 1 1 1.697-1.697L10 8.183l2.651-3.031a1.2 1.2 0 1 1 1.697 1.697l-2.758 3.152 2.758 3.15a1.2 1.2 0 0 1 0 1.698z" />
            </svg>
        </span>
    </div>
    {{/each}}
    <form action="/cadastroMotorista" method="post"
        class="card mx-auto w-full h-screen max-w-md bg-base-100 shadow-xl p-5 flex items-center justify-center">
        <h1 class="text-center text-2xl font-bold border p-8 rounded-box bg-stone-600/10 mb-4">Cadastro de motorista
        </h1>
        <label class="form-control w-full max-w-xs">
            <div class="label">
                <label for="cpf" class="label-text">Qual é o CPF do motorista?</label>
            </div>
            <input id="cpf" name="cpf" type="text" placeholder="Digite o cpf aqui"
                class="input input-bordered w-full max-w-xs" />
        </label>
        <label class="form-control w-full max-w-xs">
            <div class="label">
                <label for="name" class="label-text">Qual é o nome do motorista?</label>
            </div>
            <input id="name" name="name" type="text" placeholder="Digite o nome aqui"
                class="input input-bordered w-full max-w-xs" />
        </label>
        <label class="form-control w-full max-w-xs">
            <div class="label">
                <label for="dataNasc" class="label-text">Qual data de nascimento do motorista?</label>
            </div>
            <input id="dataNasc" name="dataNasc" type="date" class="input input-bordered w-full max-w-xs" />
        </label>
        <label class="form-control w-full max-w-xs">
            <div class="label">
                <label for="genero" class="label-text">Qual é o gênero do motorista?</label>
            </div>
            <input id="genero" name="genero" type="text" placeholder="Masculino ou Feminino?"
                class="input input-bordered w-full max-w-xs" />
        </label>
        <label class="form-control w-full max-w-xs">
            <div class="label">
                <label for="categoria" class="label-text">Qual é a categoria de habilitação do motorista?</label>
            </div>
            <input id="categoria" name="categoria" type="text" placeholder="Digite a categoria aqui"
                class="input input-bordered w-full max-w-xs" />
        </label>
        <label class="form-control w-full max-w-xs">
            <div class="label">
                <label for="email" class="label-text">Qual o email do motorista?</label>
            </div>
            <input id="email" name="email" type="email" placeholder="Digite o email aqui"
                class="input input-bordered w-full max-w-xs" />
        </label>
        <label class="form-control w-full max-w-xs">
            <div class="label">
                <label for="telefone" class="label-text">Qual o número de telefone do motorista?</label>
            </div>
            <input id="telefone" name="telefone" type="text" placeholder="Digite o telefone aqui"
                class="input input-bordered w-full max-w-xs" />
        </label>

        <div class="mt-4 border-t-2 w-full flex flex-col items-center p-2">
            <button class="btn btn-neutral w-full" type="submit">Cadastrar</button>
        </div>

    </form>

    <script src="/public/js/script.js"></script>
</main>