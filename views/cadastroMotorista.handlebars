<main>
    {{#if erros}}
    <div id="alertFailure" class="alert alert-error" role="alert">
        <button id="botaoAlertaFailure" type="button" data-dismiss-target="#alert" aria-label="Close">
            <svg class="w-3 h-3 btn btn-circle border-0 bg-transparent" aria-hidden="true"
                xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 14">
                <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                    d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6" />
            </svg>
        </button>
        <div class="text-sm font-medium">
            Os campos devem ser todos preenchidos corretamente!
        </div>

    </div>
    {{/if}}
    {{#if dupErr}}
    <div id="alertFailure" class="alert alert-error" role="alert">
        <button id="botaoAlertaFailure" type="button" data-dismiss-target="#alert" aria-label="Close">
            <svg class="w-3 h-3 btn btn-circle border-0 bg-transparent" aria-hidden="true"
                xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 14">
                <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                    d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6" />
            </svg>
        </button>
        <div class="text-sm font-medium">
            Motorista já cadastrado!
        </div>

    </div>
    {{/if}}
    <form name="form_cadastro" action="/menuMotoristas/cadastroMotorista" method="post"
        class="card mx-auto w-full max-w-md bg-base-100 shadow-xl p-5 flex items-center justify-center">
        <h1 class="text-center text-2xl font-bold border p-8 rounded-box bg-stone-600/10 mb-4">Cadastro de motorista
        </h1>
        <label class="form-control w-full max-w-xs">
            <div class="label">
                <label for="cpf" class="label-text">Qual é o CPF do motorista?</label>
            </div>
            <input id="cpf" name="cpf" type="text" placeholder="Digite o cpf aqui" maxlength="14" onblur="ValidaCPF();"
                class="input input-bordered w-full max-w-xs" />
        </label>
        <label class="form-control w-full max-w-xs">
            <div class="label">
                <label for="name" class="label-text">Qual é o nome do motorista?</label>
            </div>
            <input id="name" name="name" type="text" placeholder="Digite o nome aqui"
                class="input input-bordered w-full max-w-xs" />
        </label>
        <label class="form-control w-full max-w-xs">
            <div class="label">
                <label for="dataNasc" class="label-text">Qual data de nascimento do motorista?</label>
            </div>
            <input id="dataNasc" name="dataNasc" type="date" class="input input-bordered w-full max-w-xs" />
        </label>
        <label class="form-control w-full max-w-xs">
            <div class="label">
                <label for="genero" class="label-text">Qual é o gênero do motorista?</label>
            </div>
            <select id="genero" name="genero" class="select select-bordered">
                <option>Masculino</option>
                <option>Feminino</option>
            </select>
        </label>
        <label class="form-control w-full max-w-xs">
            <div class="label">
                <label for="categoria" class="label-text">Qual é a categoria de habilitação do motorista?</label>
            </div>
            <input id="categoria" name="categoria" type="text" placeholder="Digite a categoria aqui"
                class="input input-bordered w-full max-w-xs" />
        </label>
        <label class="form-control w-full max-w-xs">
            <div class="label">
                <label for="email" class="label-text">Qual o email do motorista?</label>
            </div>
            <input id="email" name="email" type="email" placeholder="Digite o email aqui"
                class="input input-bordered w-full max-w-xs" />
        </label>
        <label class="form-control w-full max-w-xs">
            <div class="label">
                <label for="telefone" class="label-text">Qual o número de telefone do motorista?</label>
            </div>
            <input id="telefone" name="telefone" type="text" placeholder="Digite o telefone aqui"
                class="input input-bordered w-full max-w-xs" />
        </label>

        <div class="mt-4 border-t-2 w-full flex flex-col items-center p-2">
            <button id="cadastrar" class="btn btn-neutral w-full" type="submit">Cadastrar</button>
            <a href="/menuMotoristas" class="btn btn-neutral my-2 w-full">Voltar ao menu</a>
        </div>

    </form>


    <script src="/js/script.js"></script>
</main>