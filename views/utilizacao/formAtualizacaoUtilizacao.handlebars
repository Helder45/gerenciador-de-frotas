<main>
    {{#if erros}}
    <div id="alertFailure" class="alert alert-error" role="alert">
        <button id="botaoAlertaFailure" type="button" data-dismiss-target="#alert" aria-label="Close">
            <svg class="w-3 h-3 btn btn-circle border-0 bg-transparent" aria-hidden="true"
                xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 14">
                <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                    d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6" />
            </svg>
        </button>
        <div class="text-sm font-medium">
            Os campos devem ser todos preenchidos corretamente!
        </div>

    </div>
    {{/if}}
    {{#if noDriverAndVehicle}}
    <div id="noAlertFailure" class="alert alert-error" role="alert">
        <div class="mt-4 w-full flex flex-col items-center p-2">
            <a href="/menuUtilizacao" class="btn btn-neutral my-2 w-full">Voltar ao menu</a>
        </div>
        <div class="mt-4 text-sm font-medium flex flex-col items-center p-2">
            É preciso cadastrar motoristas e veículos primeiro!
        </div>
    </div>
    {{/if}}
    {{#if utilizacao}}
    <form name="formulario" action="/menuUtilizacao/atualizarUtilizacao/{{utilizacao.utilizacao_id}}" method="post"
        class="card mx-auto w-full max-w-md bg-base-200 shadow-xl p-5 flex items-center justify-center">
        <h1 class="text-center text-2xl font-bold border p-8 rounded-box bg-stone-600/10 mb-4">Atualização de utilização
        </h1>
        <label class="form-control w-full max-w-xs">
            <div class="label">
                <label for="dataUtil" class="label-text">Data de utilização do veículo</label>
            </div>
            <input id="dataUtil" name="dataUtil" type="date" class="input input-bordered w-full max-w-xs" />
        </label>
        <label class="form-control w-full max-w-xs">
            <div class="label">
                <label for="horaUtil" class="label-text">Hora de utilização do veículo</label>
            </div>
            <input id="horaUtil" name="horaUtil" type="time" class="input input-bordered w-full max-w-xs" />
        </label>
        <label class="form-control w-full max-w-xs">
            <div class="label">
                <label for="km_inicial" class="label-text">Qual a quilometragem inicial do veículo?</label>
            </div>
            <input id="km_inicial" name="km_inicial" type="number" min="0" max="500000" step="1"
                class="input input-bordered w-full max-w-xs" />
        </label>
        <label class="form-control w-full max-w-xs">
            <div class="label">
                <label for="km_final" class="label-text">Qual a quilometragem final do veículo?</label>
            </div>
            <input id="km_final" name="km_final" type="number" min="0" max="500000" step="1"
                class="input input-bordered w-full max-w-xs" />
        </label>


        <label class="form-control w-full max-w-xs">
            <div class="label">
                <label for="motorista" class="label-text">Qual o motorista do veículo?</label>
            </div>
            <select name="motorista" id="motorista" class="select select-bordered w-full max-w-xs">
                {{#each motoristas}}
                <option value="{{this.id}}">{{this.nome}}</option>
                {{/each}}
            </select>
        </label>

        <label class="form-control w-full max-w-xs">
            <div class="label">
                <label for="veiculo" class="label-text">Qual o veículo que está sendo ou foi utilizado?</label>
            </div>
            <select name="veiculo" id="veiculo" class="select select-bordered w-full max-w-xs">
                {{#each veiculos}}
                <option value="{{this.id}}">{{this.marca}} {{this.modelo}}, placa: {{this.placa}}</option>
                {{/each}}
            </select>
        </label>

        <div class="mt-4 border-t-2 w-full flex flex-col items-center p-2">
            <button id="botao_submit" class="btn btn-neutral w-full" type="submit">Atualizar</button>
            <a href="/menuUtilizacao" class="btn btn-neutral my-2 w-full">Voltar ao menu</a>
        </div>

    </form>
    {{else}}
    <div class="border rounded-md px-2 my-2 bg-slate-100">
        <h1 class="text-xl font-bold my-4">Registro de uso não encontrado para atualizar!</h1>
        <a href="/menuUtilizacao" class="btn btn-neutral my-2">Voltar ao menu</a>
    </div>
    {{/if}}
    <script src="/js/script.js"></script>
</main>