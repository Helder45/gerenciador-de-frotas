<main>
    {{#if erros}}
    <div id="alertFailure" class="alert alert-error" role="alert">
        <button id="botaoAlertaFailure" type="button" data-dismiss-target="#alert" aria-label="Close">
            <svg class="w-3 h-3 btn btn-circle border-0 bg-transparent" aria-hidden="true"
                xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 14">
                <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                    d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6" />
            </svg>
        </button>
        <div class="text-sm font-medium">
            Os campos devem ser todos preenchidos corretamente!
        </div>

    </div>
    {{/if}}
    {{#if veiculo}}
    <form name="formulario" action="/menuVeiculos/atualizarVeiculo/{{veiculo.id}}" method="post"
        class="card mx-auto w-full max-w-md bg-base-100 shadow-xl p-5 flex items-center justify-center">
        <h1 class="text-center text-2xl font-bold border p-8 rounded-box bg-stone-600/10 mb-4">Atualização de veiculo
        </h1>
        <label class="form-control w-full max-w-xs">
            <div class="label">
                <label for="cpf" class="label-text">Qual é o CPF do veiculo?</label>
            </div>
            <input id="cpf" name="cpf" type="text" value="{{veiculo.cpf}}" placeholder="Digite o cpf aqui"
                class="input input-bordered w-full max-w-xs" onchange="ValidaCPF();" />
            <span id="cpf_label" class="text-red-600 hidden ">CPF Inválido</span>
        </label>
        <label class="form-control w-full max-w-xs">
            <div class="label">
                <label for="name" class="label-text">Qual é o nome do veiculo?</label>
            </div>
            <input id="name" name="name" type="text" value="{{veiculo.nome}}" placeholder="Digite o nome aqui"
                class="input input-bordered w-full max-w-xs" />
        </label>
        <label class="form-control w-full max-w-xs">
            <div class="label">
                <label for="dataNasc" class="label-text">Qual data de nascimento do veiculo?</label>
            </div>
            <input id="dataNasc" name="dataNasc" type="date" value="{{veiculo.dataNasc}}"
                class="input input-bordered w-full max-w-xs" />
        </label>
        <label class="form-control w-full max-w-xs">
            <div class="label">
                <label for="genero" class="label-text">Qual é o sexo do veiculo?</label>
            </div>
            <select id="genero" name="genero" class="select select-bordered w-full max-w-xs">
                <option value="Masculino">Masculino</option>
                <option value="Feminino">Feminino</option>
            </select>
        </label>
        <label class="form-control w-full max-w-xs">
            <div class="label">
                <label for="categoria" class="label-text">Qual é a categoria de habilitação do veiculo?</label>
            </div>
            <select name="categoria" id="categoria" class="select select-bordered w-full max-w-xs">
                <option value="Categoria A">Categoria
                    A</option>
                <option value="Categoria B">Categoria
                    B</option>
                <option value="Categoria C">Categoria
                    C</option>
                <option value="Categoria D">Categoria
                    D</option>
                <option value="Categoria E">Categoria
                    E</option>
                <option value="Categoria A/B">
                    Categoria A/B</option>
                <option value="Categoria A/C">
                    Categoria A/C</option>
                <option value="Categoria A/D">
                    Categoria A/D</option>
                <option value="Categoria A/E">
                    Categoria A/E</option>
            </select>
        </label>
        <label class="form-control w-full max-w-xs">
            <div class="label">
                <label for="email" class="label-text">Qual o email do veiculo?</label>
            </div>
            <input id="email" name="email" type="email" value="{{veiculo.email}}" placeholder="Digite o email aqui"
                class="input input-bordered w-full max-w-xs" />
        </label>
        <label class="form-control w-full max-w-xs">
            <div class="label">
                <label for="telefone" class="label-text">Qual o número de telefone do veiculo?</label>
            </div>
            <input id="telefone" name="telefone" type="text" value="{{veiculo.telefone}}"
                placeholder="Digite o telefone aqui" class="input input-bordered w-full max-w-xs" />
        </label>

        <div class="mt-4 border-t-2 w-full flex flex-col items-center p-2">
            <button id="botao_submit" class="btn btn-neutral w-full" type="submit">Atualizar</button>
            <a href="/menuveiculos" class="btn btn-neutral my-2 w-full">Voltar ao menu</a>
        </div>

    </form>
    {{else}}

    <div class="border rounded-md px-2 my-2 bg-slate-100">
        <h1 class="text-xl font-bold my-4">veiculo não encontrado para atualizar!</h1>
        <a href="/menuveiculos" class="btn btn-neutral my-2">Voltar ao menu</a>
    </div>

    {{/if}}
    <script src="/js/script.js"></script>
</main>